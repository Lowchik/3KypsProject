<Window x:Class="PO.Panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PO"
        mc:Ignorable="d"
        Title="Panel" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <Label Content="Добро пожаловать" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Label x:Name="l1" Content="ФИО пользователя" HorizontalAlignment="Center" Margin="0,198,0,0" VerticalAlignment="Top" FontSize="40" Initialized="l1_Initialized"/>
        <Button x:Name="MenuAbonenta" Content="Меню абонента" HorizontalAlignment="Center" Margin="0,731,0,0" VerticalAlignment="Top" Height="78" Width="308" FontSize="34" Click="MenuAbonenta_Click"/>
        <Button x:Name="Exit" Content="Выйти из аккаунта" HorizontalAlignment="Center" Margin="0,920,0,0" VerticalAlignment="Top" Height="78" Width="440" FontSize="34" Click="Exit_Click"/>
        <Label Content="Роль:" HorizontalAlignment="Left" Margin="16,37,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="l2" Content="Название роли" HorizontalAlignment="Left" Margin="74,37,0,0" VerticalAlignment="Top" FontSize="20" Initialized="l2_Initialized"/>

    </Grid>
</Window>
